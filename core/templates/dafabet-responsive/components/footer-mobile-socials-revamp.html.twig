<section class="social-media">
    {% if footer.socialmedia is not empty %}
        {% if footer.social_media_title is not empty %}
        <h4 class="mb-20">{{footer.social_media_title}}</h4>
        {% endif %}
        <p class="text-0">
            {% set lazy_load_class = (lazy_load == 'off')  ? 'lazy-loaded' : 'lazy-load'%}
            {% for socialitem in footer.socialmedia  %}
                    <a  
                        href="{{ url(socialitem.field_socialmedia_cmi_links[0].value)}}"
                        class="icon-{{socialitem.field_socialmedia_cmi_link_class[0].value}} mb-tablet-5 {{lazy_load_class}}"
                        data-src="{{ asset('images/sprite-responsive.png') }}" target="{{ socialitem.field_socialmedia_cmi_linktarget[0].value }}"
                    >
                        {{socialitem.field_socialmedia_cmi_link_class[0].value}}
                    </a>
            {% endfor %}
        </p>
    {% endif %}

    <div class="partner-desktop-container visible-desktop"></div>
</section>