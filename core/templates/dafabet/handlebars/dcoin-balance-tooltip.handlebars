<div class="cashier-wallet-rows-container">
    <div class="cashier-wallet-rows-header">
        <div class="fiat-header">{{currency}}</div>
        <div class="dafacoin-header">{{labels.dc}}</div>
        <div class="switch-header">{{labels.switch}}</div>
    </div>
    {{#each breakdown as |item key|}}
    <div class="cashier-wallet-row">
        <div class="balance-details">
            <div class="label">{{ item.label }}</div>
            <div class="balance_row">
            {{#if item.walletStatus.status}}
                <div class="fiat_balance">{{ item.totalFiat }}</div>
                <div class="token_balance">{{ item.totalToken }}</div>
                <div class="token_toggle">
                    <div class="fiat{{#unless item.tokenFlag}} active{{/unless}}">{{../currency}}</div>
                    <div class="switch">
                        <svg class="dafacoin-switch-icon" width="24" height="24" viewBox="0 0 24 24">
                            <use xlink:href="#switch-icon" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
                        </svg>
                    </div>
                    <div class="dafacoin{{#item.tokenFlag}} active{{/item.tokenFlag}}">{{../tokenLabel}}</div>
                    <input data-wallet-id="{{item.wallet}}" type="checkbox" class="checkbox" {{#item.tokenFlag}}checked{{/item.tokenFlag}}>
                </div>
            {{else}}
                <span>{{lookup ../fetchErrors item.walletStatus.error}}</span>
            {{/if}}
            </div>
        </div>
    </div>
    {{/each}}
</div>